# Environment Variables for MedReg Frontend
# Copy this file to .env.local and fill in your values

# OpenMRS API Base URLs
# Server-side (BFF) uses this to call OpenMRS. Do NOT expose in browser code.
OPENMRS_BASE_URL=http://localhost:8080/openmrs/ws/rest/v1
# Kept for backward compatibility in development only
NEXT_PUBLIC_OPENMRS_API_URL=http://localhost:8080/openmrs/ws/rest/v1

# Feature Flags
NEXT_PUBLIC_ENABLE_NHIE_SYNC=true
NEXT_PUBLIC_ENABLE_PHOTO_CAPTURE=false

# Sentry Error Tracking (production only)
NEXT_PUBLIC_SENTRY_DSN=

# Analytics (production only)
NEXT_PUBLIC_GA_TRACKING_ID=

# OPD Encounter Configuration / Locations
# Obtain from OpenMRS Administration UI or metadata API in your instance.
OPENMRS_LOCATION_UUID=aff27d58-a15c-49a6-9beb-d30dcfc0c66e
OPENMRS_OPD_ENCOUNTER_TYPE_UUID=
OPENMRS_OPD_VISIT_TYPE_UUID=
OPENMRS_ENABLE_STRUCTURED_DIAGNOSIS=false
OPENMRS_DIAGNOSIS_CONCEPT_SOURCE=ICD-10
NEXT_PUBLIC_TRIAGE_LOCATION_UUID=0f1f6b3e-1c2d-4a5b-9c6d-7e8f90a1b2c3
NEXT_PUBLIC_CONSULTATION_LOCATION_UUID=1a2b3c4d-5e6f-4a70-8b90-1c2d3e4f5a6b
NEXT_PUBLIC_PHARMACY_LOCATION_UUID=2b3c4d5e-6f70-4a81-9b01-2c3d4e5f6a7b
NEXT_PUBLIC_QUEUE_POLL_INTERVAL=10000

# Optional: Concept UUIDs for vitals/notes (if not set, encounters will be created without obs)
OPENMRS_CONCEPT_TEMP_UUID=
OPENMRS_CONCEPT_WEIGHT_UUID=
OPENMRS_CONCEPT_HEIGHT_UUID=
OPENMRS_CONCEPT_PULSE_UUID=
OPENMRS_CONCEPT_SYSTOLIC_BP_UUID=
OPENMRS_CONCEPT_DIASTOLIC_BP_UUID=
OPENMRS_CONCEPT_CONSULTATION_NOTES_UUID=

# Dispensing & Billing (optional)
OPENMRS_OPD_DISPENSE_ENCOUNTER_TYPE_UUID=
OPENMRS_CONCEPT_BILLING_TYPE_UUID=
OPENMRS_CONCEPT_BILLING_TYPE_NHIS_UUID=
OPENMRS_CONCEPT_BILLING_TYPE_CASH_UUID=
