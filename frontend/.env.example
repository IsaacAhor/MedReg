# Environment Variables for MedReg Frontend
# Copy this file to .env.local and fill in your values

# OpenMRS API Base URLs
# Server-side (BFF) uses this to call OpenMRS. Do NOT expose in browser code.
OPENMRS_BASE_URL=http://localhost:8080/openmrs/ws/rest/v1
# Kept for backward compatibility in development only
NEXT_PUBLIC_OPENMRS_API_URL=http://localhost:8080/openmrs/ws/rest/v1

# Feature Flags
NEXT_PUBLIC_ENABLE_NHIE_SYNC=true
NEXT_PUBLIC_ENABLE_PHOTO_CAPTURE=false

# Sentry Error Tracking (production only)
NEXT_PUBLIC_SENTRY_DSN=

# Analytics (production only)
NEXT_PUBLIC_GA_TRACKING_ID=
