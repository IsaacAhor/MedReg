<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.openmrs.module</groupId>
        <artifactId>openmrs-module-ghanaemr</artifactId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>

    <artifactId>openmrs-module-ghanaemr-omod</artifactId>
    <name>OpenMRS Module - Ghana EMR (OMOD)</name>
    <packaging>jar</packaging>

    <dependencies>
        <dependency>
            <groupId>org.openmrs.api</groupId>
            <artifactId>openmrs-api</artifactId>
            <version>${openmrs.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.openmrs.web</groupId>
            <artifactId>openmrs-web</artifactId>
            <version>${openmrs.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.openmrs.module</groupId>
            <artifactId>openmrs-module-ghanaemr-api</artifactId>
            <version>0.1.0-SNAPSHOT</version>
        </dependency>
        <!-- REST Webservices module APIs (provided by runtime) -->
        <dependency>
            <groupId>org.openmrs.module</groupId>
            <artifactId>webservices.rest-omod</artifactId>
            <version>2.24.0</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <finalName>openmrs-module-ghanaemr-${project.version}</finalName>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <!-- Ensure final .jar (then .omod) excludes conflicting logging libs even if present in classes/lib -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.3.0</version>
                <configuration>
                    <excludes>
                        <exclude>lib/slf4j-*.jar</exclude>
                        <exclude>lib/jcl-over-slf4j*.jar</exclude>
                        <exclude>lib/commons-logging*.jar</exclude>
                        <exclude>lib/log4j-*.jar</exclude>
                        <exclude>lib/logback-*.jar</exclude>
                    </excludes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.10.1</version>
                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                </configuration>
            </plugin>
            <!-- Copy API JAR and ALL transitive dependencies into /lib inside the OMOD -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>3.6.1</version>
                <executions>
                    <!-- Copy API JAR into OMOD lib/ -->
                    <execution>
                        <id>copy-api-jar-into-omod-lib</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.openmrs.module</groupId>
                                    <artifactId>openmrs-module-ghanaemr-api</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.outputDirectory}/lib</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                    <!-- Copy ALL transitive dependencies (HAPI FHIR, Guava, OkHttp, etc.) into OMOD lib/ -->
                    <execution>
                        <id>copy-transitive-dependencies</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.outputDirectory}/lib</outputDirectory>
                            <includeScope>runtime</includeScope>
                            <!-- Exclude logging frameworks that must be provided by OpenMRS core to avoid
                                 classloader conflicts (e.g., org.slf4j.impl.StaticLoggerBinder errors) -->
                            <excludeGroupIds>org.slf4j,ch.qos.logback,org.apache.logging.log4j,javax.servlet,org.springframework,commons-logging</excludeGroupIds>
                            <excludeArtifactIds>
                                openmrs-module-ghanaemr-api,
                                slf4j-api,
                                jcl-over-slf4j,
                                commons-logging,
                                logback-classic,
                                logback-core,
                                log4j,
                                log4j-over-slf4j
                            </excludeArtifactIds>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- Rename the built web artifact from .jar to .omod for OpenMRS deployment -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <!-- Purge conflicting logging libraries from OMOD lib/ just before packaging -->
                    <execution>
                        <id>purge-conflicting-logs</id>
                        <!-- Run after copy-dependencies (prepare-package) and BEFORE jar is packaged -->
                        <phase>prepare-package</phase>
                        <configuration>
                            <target>
                                <delete>
                                    <fileset dir="${project.build.outputDirectory}/lib">
                                        <include name="slf4j-*.jar"/>
                                        <include name="jcl-over-slf4j*.jar"/>
                                        <include name="commons-logging*.jar"/>
                                        <include name="logback-*.jar"/>
                                        <include name="log4j-*.jar"/>
                                    </fileset>
                                </delete>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>rename-jar-to-omod</id>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <move file="${project.build.directory}/${project.build.finalName}.jar"
                                      tofile="${project.build.directory}/${project.build.finalName}.omod"/>
                                <!-- Also copy to project root openmrs-modules folder for easy deployment -->
                                <copy file="${project.build.directory}/${project.build.finalName}.omod"
                                      tofile="${project.basedir}/../../openmrs-modules/${project.build.finalName}.omod"
                                      overwrite="true"/>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
